<!--home.handlebars -->
<div class="container">
    <div class="col-md-12 jumbotron">
        <div class="text-center">

            <h3> Washington Free Beacon - Mongo Scraper</h3>
            <img src="assets/images/beacon.png" alt="freeBeacon">

        </div>

    </div>
    <div class="col-md-12">
        {{#if article}}
            {{#each article}}
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4>{{this.title}}</h4>
                    </div>
                    <div class="panel-body">
                        <p> {{this.condensed}}</p>
                        <a href= {{this.link}} target="_blank">{{this.link}}</a>
                        <br>
                        <br>
                        <button type="button" class="btn btn-success save" data-id= {{this._id}}>Save Article</button>
                    </div>
                </div>
            {{/each}}
        {{else}}
            <div class="panel panel-default">
                <div class="panel-body">
                    <h4>There are no new articles.  Press the scrape button</h4>
                </div>
            </div>
        {{/if}}
    </div>
</div>
